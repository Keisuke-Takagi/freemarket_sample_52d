= render partial: "shared/topheader"
= render partial: "shared/pankuzukari"

.oobako
  .ohako
    = render partial: "shared/mypageside"
    .tisanahako
      .syuppinbox
        .syuppinbox__head
          出品した商品
        .syuppinbox__menu
          .syuppinbox__menu__1
            出品中
          .syuppinbox__menu__2
            取引中
          .syuppinbox__menu__3
            売却済み
        - @items.map do |item|
          .syuppinbox__content
            = link_to "/users/mypage/change_status/#{item.id}", class: "syuppinbox__content__link" do
              .syuppinbox__content__link__item
                = image_tag "#{item.image}", class: "img-fit"
              .syuppinbox__content__link__name
                = item.name
              - if item.status == 1
                .syuppinbox__content__link__on-sale  出品中
              - elsif item.status == nil
                .syuppinbox__content__link__sale-stop  公開停止
              .syuppinbox__content__link__icon  ＞

= render partial: "shared/topfooter"
